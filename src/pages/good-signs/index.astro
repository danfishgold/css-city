import tuli from './tuli.jpeg'
---

<Post title='שלטים טובים'>
  <figure>
    <img src={museum} />
    <figcaption>מוזיאון תל אביב, ינואר 2023</figcaption>
  </figure>

  <figure>
    <img src={truckYardFire} />
